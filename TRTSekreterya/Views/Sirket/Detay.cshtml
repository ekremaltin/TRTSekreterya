@model TRTSekreterya.Models.sirket

@{
    ViewBag.Title = "Şirket Detay";
}

<h2>Detaylar</h2>

<div>
    <h4>@Model.sirketAdi Detaylı Bilgi</h4>
    <hr />

    <table class="table table-user-information">
        <thead>
            <tr>
                <th></th>
                <th>Bilgiler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Ad</td>
                <td>@Model.sirketAdi</td>
            </tr>
            <tr>
                <td>Soyad</td>
                <td>@Model.sirketSektor</td>
            </tr>
            <tr>
                <td>Meslek</td>
                <td>@Model.sirketSorumluAdiSoyadi</td>
            </tr>
            <tr>
                <td>Ünvan</td>
                <td>@Model.sirketSorumluTel</td>
            </tr>
            <tr>
                <td>Şirket</td>
                <td>@Model.adre.ulke.ulkeAdi</td>
            </tr>
            <tr>
                <td>Birim</td>
                <td>@if (@Model.adre.sehir != null)
                {@Model.adre.sehir.sehirAdi }
                else { <span>-</span> }</td>
            </tr>

            <tr>
                <td>İlçe</td>
                <td>@Model.adre.adresIlce</td>
            </tr>
            <tr>
                <td>Posta Kodu</td>
                <td>@Model.adre.adresPostaKodu</td>
            </tr>

            @foreach (var item in Model.iletisimToSirkets)
            {
                <tr>
                    <td>@item.iletisim.iletisimTip</td>
                    <td>@item.value</td>
                </tr>
            } 

            
        </tbody>
    </table>

