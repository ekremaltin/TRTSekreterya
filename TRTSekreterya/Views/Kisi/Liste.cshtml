@using TRTSekreterya.Models
@model List<kisi>

@{
    ViewBag.Title = "Kişiler";
    var grid = new WebGrid(canPage: true, rowsPerPage: 10);
    grid.Bind(source: Model, rowCount: ViewBag.TotalRows, autoSortAndPage: false);
}

<h2>Kayıtlı Kişiler</h2>
<div><a href="/Kisi/Olustur" class="glyphicon glyphicon-plus">Yeni Kişi Oluştur</a> </div>

<div class="container">
    <h2>Kişi List</h2>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="#" class="navbar-brand">Search</a>
            </div>
            <div class="collapse navbar-collapse">
                @using (Html.BeginForm("Liste", "Kisi", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                {
                    <div class="form-group">
                        <input type="text" name="search" value="@ViewBag.search" class="form-control" placeholder="search" />
                    </div>
                        <button type="submit" value="Search" class="btn btn-success">Search</button>
                }
            </div>
        </div>
    </nav>
    <div>
        @grid.Table(
                tableStyle: "table table-responsive table-bordered",
                columns: grid.Columns(
                    grid.Column(columnName: "kisiAdi", header: "Ad"),
                    grid.Column(columnName: "kisiSoyadi", header: "Soyad"),
                    grid.Column(columnName: "kisiUnvan", header: "Ünvan"),
                    grid.Column(columnName: "kisiMeslek", header: "Meslek"),
                    grid.Column(format: (item) => new HtmlString("<input type='button' id='btnDetail' value='Detay' onclick=\"getDetail('" + item.kisiID + "')\" />")),
                    grid.Column(format: (item) => new HtmlString("<input type='button' id='btnEdit' value='Düzenle' onclick=\"getEdit('" + item.kisiID + "')\" />")),
                    grid.Column(format: (item) => new HtmlString("<input type='button' id='btnDelete' value='Sil' onclick=\"getDelete('" + item.kisiID + "')\" />"))
                )
            )

        <div class="row">
            <div class="col-sm-6">
                @grid.PagerList(mode: WebGridPagerModes.All, paginationStyle: "pagination pagination-small pagination-right")
            </div>
        </div>

        @Html.Hidden("dir", grid.SortDirection)
        @Html.Hidden("col", grid.SortColumn)

    </div>
</div>

